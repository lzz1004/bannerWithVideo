/**app.wxss**/

@import "/wxParse/wxParse.wxss";

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.clearfix {
    overflow: hidden;
    _height: 1%;
}

.block {
    display: block !important;
}

/* show hide */

.show {
    display: block !important;
}

.hide {
    display: none !important;
}

/* tabs */

.tabs {
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 0;
    border-top: 1rpx solid #e5e5e5;
    border-bottom: 1rpx solid #e5e5e5;
    text-align: center;
    display: flex;
    justify-content: center;
}

.tab-list {
    width: 40%;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #666;
    padding: 10rpx 0;
}

view {
    box-sizing: border-box;
}

.on {
    width: 60rpx;
    height: 4rpx;
    position: relative;
    bottom: -8rpx;
    margin: 0 auto;
    background: #11dcb7;
}

/* block块 图片文字 列*/

.block-column {
    padding-left: 40rpx;
    border-left: 1rpx #e6e6e6 solid;
}

.block-column image {
    width: 32rpx;
    height: 32rpx;
    margin: 10rpx auto 0;
}

.block-column text {
    font-size: 24rpx;
    color: #999;
    padding-top: 10rpx;
    display: block;
}

/* block img_3 */

.block-img3 {
    width: 100%;
    padding: 20rpx 0;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.block-img3 image {
    width: 32%;
    height: 230rpx;
    margin: 8rpx 0;
}

.block-img3 image:nth-child(3n-1) {
    margin-left: 2%;
    margin-right: 2%;
}

/* block img_3  img + text*/

.block-img3 .item {
    width: 32%;
    /* height: 230rpx; */
    margin: 8rpx 0;
}

.block-img3 .item:nth-child(3n-1) {
    margin-left: 2%;
    margin-right: 2%;
}

.block-img3 .item image {
    width: 100%;
    height: 230rpx;
    border-radius: 5rpx;
}

.block-img3 .item text {
    font-size: 28rpx;
    color: #666;
    padding-top: 10rpx;
}

.hiddenScroll {
    overflow: hidden;
}

.no-data {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    padding-top: 60rpx;
    padding-bottom: 60rpx;
}

.empty-img {
    width: 350rpx;
    height: 350rpx;
    display: block;
    margin: 20rpx auto;
}

.footerMask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 100;
}

.footerInputWrapper {
    width: 500rpx;
    height: 300rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    z-index: 101;
    border-radius: 10rpx;
    font-size: 28rpx;
    box-sizing: border-box;
}

.footerInput {
    width: 100%;
    height: 200rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
